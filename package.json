{
  "name": "@vivianhealth/aws-cloudformation-wait-ready",
  "version": "1.0.0",
  "description": "Wait for a CloudFormation stack to be ready for the next deploy",
  "repository": "https://github.com/nursefly/aws-cloudformation-wait-ready",
  "author": "Vivian Health",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aws-cloudformation-wait-ready": "bin/aws-cloudformation-wait-ready.js"
  },
  "files": [
    "bin",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "aws-cloudformation-wait-ready": "node bin/aws-cloudformation-wait-ready.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "shx rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.272.0",
    "chalk": "^5.2.0",
    "commander": "^10.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "semantic-release": "^20.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.4"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist",
            "bin",
            "LICENSE",
            "README.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
